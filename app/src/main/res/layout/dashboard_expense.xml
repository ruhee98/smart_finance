<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_expense_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Type:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/nav_header"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/category_expense_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Category"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ammoun_expense_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Amount:"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/expense_ammount_color" />

        <TextView
            android:id="@+id/date_expense_ds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="10 June 2018"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/income_coloer" />


    </LinearLayout>

</android.support.v7.widget.CardView>