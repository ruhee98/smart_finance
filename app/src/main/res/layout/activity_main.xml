<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dasboard_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tranghoang.expense.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="center"
                android:text="Welcome to Smart Finance"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#3F51B5"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="center"
                android:text="Sign in to continue"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#1D0F0F" />

            <EditText
                android:id="@+id/email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Email:"
                android:padding="15dp"
                android:textColor="#3F51B5"
                android:textColorHint="#777171" />

            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Password:"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#3F51B5"
                android:textColorHint="#9C8282" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/montserrat"
                android:text="Log In"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#FCFCFC" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Forget Password?"
                android:textColor="#250288" />

            <TextView
                android:id="@+id/signup_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Don't have account? Sign up here."
                android:textColor="#250288" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>
