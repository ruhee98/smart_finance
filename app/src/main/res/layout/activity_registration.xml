<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    tools:context="com.tranghoang.expense.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Create your account now."
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#191A19" />

            <EditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Email:"
                android:padding="15dp"
                android:textColor="#5F5D5D"
                android:textColorHint="#857D7D" />

            <EditText
                android:id="@+id/password_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Password:"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#5F5C5C"
                android:textColorHint="#928F8F" />

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="384dp"
                android:layout_height="38dp"
                android:layout_margin="10dp"
                android:background="@android:color/white"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:text="Sign Up"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                tools:background="@drawable/mybutton" />

            <TextView
                android:id="@+id/signin_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Already have account? Sign in here."
                android:textColor="#250288" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
